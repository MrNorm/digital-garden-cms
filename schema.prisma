datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model Project {
  id        String    @id @default(cuid())
  title     String    @default("")
  content   String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  tags      Tag[]     @relation("Project_tags")
  createdAt DateTime? @default(now())
}

model Cutting {
  id        String    @id @default(cuid())
  content   String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  images    Image[]   @relation("Cutting_images")
  tags      Tag[]     @relation("Cutting_tags")
  createdAt DateTime? @default(now())
}

model Image {
  id              String    @id @default(cuid())
  description     String    @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
  cuttings        Cutting[] @relation("Cutting_images")
  tags            Tag[]     @relation("Image_tags")
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @default("")
  projects Project[] @relation("Project_tags")
  cuttings Cutting[] @relation("Cutting_tags")
  images   Image[]   @relation("Image_tags")
}
